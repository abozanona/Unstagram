{
  "update_url": "https://clients2.google.com/service/update2/crx",
  "name": "Unstagram - Instagram messeges unseen",
  "short_name": "Unstagram",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Hide instagram messages seen",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Unstagram"
  },
  "permissions": [
    "https://*.instagram.com/*",
    "webRequest",
    "webRequestBlocking"
  ]
}